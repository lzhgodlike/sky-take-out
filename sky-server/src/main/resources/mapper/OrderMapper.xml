    <select id="getByBeginAndEndTime" resultType="com.sky.vo.TurnoverReportVO">
        select DATE_FORMAT(order_time, '%Y-%m-%d') as dateList,
               sum(amount)                         as turnoverList
        from orders
        where order_time between #{begin} and #{end}
          and status = 5
        group by DATE_FORMAT(order_time, '%Y-%m-%d')
        order by dateList
    </select>
    <select id="getByBeginAndEndTimeOne" resultType="com.sky.entity.Orders">
        select *
        from orders
        where order_time between #{begin} and #{end}
    </select>
    <select id="getSalesTop10" resultType="com.sky.dto.GoodsSalesDTO">
        select count(*) as number, name
        from order_detail
                 join orders o on order_detail.order_id = o.id
        where order_time between #{begin} and #{end}
          and o.status = 5
        group by name
        order by number desc
        limit 0, 10
    </select>
</mapper>
